<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/spinner_fish_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"/>

    <EditText
        android:id="@+id/et_fish_weight"
        android:labelFor="@+id/et_fish_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <EditText
        android:id="@+id/et_fish_length"
        android:labelFor="@+id/et_fish_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"/>
    <Button
        android:id="@+id/add_fish_button"
        android:text="@string/add_fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>